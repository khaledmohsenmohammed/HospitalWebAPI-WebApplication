@model AdminApplicationUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="#" type="image/png">

    <title>Login</title>

    <link href="~/theme/css/style.css" rel="stylesheet">
    <link href="~/theme/css/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-body">

    <div class="container">

        <form method="post" asp-controller="Login" asp-action="Index" 
   asp-route-returnurl = "@Model.ReturnUrl" class="form-signin" >
            <div class="form-signin-heading text-center">
                <h1 class="sign-title">تسجيل الدخول</h1>
                <img src="~/theme/images/login-logo.png" alt="" />
            </div>
            <div class="login-wrap">
                <input asp-for="UserName" type="text" class="form-control" placeholder="اسم المستخدم" autofocus>
                <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور">

                <button class="btn btn-lg btn-login btn-block" type="submit">
                    <i class="fa fa-check"></i>
                </button>

                <div class="registration">
                    مع تحيات ادارة الطوارئ بالمديرية

                </div>
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> تذكرنى
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> هل نسيت كلمة المرور؟</a>

                    </span>
                </label>

            </div>

            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">هل نسيت كلمة المرور؟</h4>
                        </div>
                        <div class="modal-body">
                            <p>اكتب الايميل بالاسفل لاسترجاع كلمة المرور</p>
                            <input type="text" name="email" placeholder="الايميل" autocomplete="off" class="form-control placeholder-no-fix">

                        </div>
                        <div class="modal-footer">

                            <button class="btn btn-primary" type="button">ارسال</button>
                            <button data-dismiss="modal" class="btn btn-default" type="button">إلغاء</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->

        </form>

    </div>



    <!-- Placed js at the end of the document so the pages load faster -->
    <!-- Placed js at the end of the document so the pages load faster -->
    <script src="~/theme/js/jquery-1.10.2.min.js"></script>
    <script src="~/theme/js/bootstrap.min.js"></script>
    <script src="~/theme/js/modernizr.min.js"></script>

</body>
</html>
