@model Covid19.Models.Hospital

@{
    ViewData["Title"] = "Delete";
}
<div class="page-heading">
<h3>
    حذف مستشفى
</h3>
<ul class="breadcrumb">
    <li>
        <a asp-controller="Hospitals" asp-action="Index">المستشفيات</a>
    </li>
    <li class="active">حذف</li>
</ul>
</div>

<div class="col-lg-12" >
    <section class="panel" style=" padding: 30px 30px 30px 30px" >
        <table class="display table table-bordered table-striped dataTable" >
            <thead>
                <tr role="row">
                    <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1" aria-sort="descending" aria-label="
                                        اسم الجهة
                                    : activate to sort column ascending" style="width: 215px;">
                        اسم الجهة
                    </th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1" aria-label="
                                        عدد الأسرة
                                    : activate to sort column ascending" style="width: 168px;">
                        عدد الأسرة
                    </th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1" aria-label="
                                        عدد أجهزة التنفس
                                    : activate to sort column ascending" style="width: 216px;">
                        عدد أجهزة التنفس
                    </th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1" aria-label="التحكم: activate to sort column ascending" style="width: 378px;">التحكم</th>
                </tr>
            </thead>

            <tbody role="alert" aria-live="polite" aria-relevant="all">
                <tr class="odd">
                    <td class="  sorting_1">
                        @Html.DisplayFor(model => model.HName)
                    </td>
                    <td class=" ">
                        @Html.DisplayFor(model => model.ICUBeds)
                    </td>
                    <td class=" ">
                        @Html.DisplayFor(model => model.ICUVents)
                    </td>
                    <td class=" ">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="حذف" class="btn btn-danger" /> |
                            <a  class="btn btn-info  btn-sm" asp-action="Index">عودة</a>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
</div>


