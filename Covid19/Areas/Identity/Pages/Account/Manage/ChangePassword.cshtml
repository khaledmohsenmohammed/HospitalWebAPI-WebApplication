@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-heading">
    <h3>
        تغيير كلمة المرور
    </h3>
    <ul class="breadcrumb">
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage">المستخدمين</a>
        </li>
        <li class="active">تغيير كلمة المرور</li>
    </ul>
</div>
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                   كلمة مرور جديدة
                </header>
                <div class="panel-body">
                    <form class="form-horizontal adminex-form" id="change-password-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.OldPassword" class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Input.OldPassword" class="form-control" />
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NewPassword" class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Input.NewPassword" class="form-control" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-primary">تحديث كلمة المرور</button>
                            </div>
                        </div>
                    </form>

                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }
                </div>
            </section>
        </div>
    </div>

</section>


