@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-heading">
    <h3>
        البيانات الشخصية
    </h3>
    <ul class="breadcrumb">
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage">المستخدمين</a>
        </li>
        <li class="active">البيانات الشخصية</li>
    </ul>
</div>
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    البيانات الشخصية
                </header>
                <div class="panel-body">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />

                    <form class="form-horizontal adminex-form" id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Username" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber" class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</section>

